CREATE TABLE user_wordme6 (
  user_id				  VARCHAR(30) NOT NULL,
  current_word		VARCHAR(6) NOT NULL,
  current_status	CHAR(1) NOT NULL DEFAULT 'N',		-- New (N), Playing (P), Completed (C)
	message				  VARCHAR(200) NOT NULL,
	message_error		VARCHAR(200) NOT NULL,
	guess1				  VARCHAR(6) NOT NULL,
	guess2				  VARCHAR(6) NOT NULL,
	guess3				  VARCHAR(6) NOT NULL,
	guess4				  VARCHAR(6) NOT NULL,
	guess5				  VARCHAR(6) NOT NULL,
	guess6				  VARCHAR(6) NOT NULL,
	guess7				  VARCHAR(6) NOT NULL,
	guess8				  VARCHAR(6) NOT NULL,
	guess9				  VARCHAR(6) NOT NULL,
	exact_count1		INT DEFAULT 0,
	exact_count2		INT DEFAULT 0,
	exact_count3		INT DEFAULT 0,
	exact_count4		INT DEFAULT 0,
	exact_count5		INT DEFAULT 0,
	exact_count6		INT DEFAULT 0,
	exact_count7		INT DEFAULT 0,
	exact_count8		INT DEFAULT 0,
	exact_count9		INT DEFAULT 0,
	close_count1		INT DEFAULT 0,
	close_count2		INT DEFAULT 0,
	close_count3		INT DEFAULT 0,
	close_count4		INT DEFAULT 0,
	close_count5		INT DEFAULT 0,
	close_count6		INT DEFAULT 0,
	close_count7		INT DEFAULT 0,
	close_count8		INT DEFAULT 0,
	close_count9		INT DEFAULT 0,
	attempts			  LONG DEFAULT 0,
	wins1				    LONG DEFAULT 0,
	wins2				    LONG DEFAULT 0,
	wins3				    LONG DEFAULT 0,
	wins4				    LONG DEFAULT 0,
	wins5				    LONG DEFAULT 0,
	wins6				    LONG DEFAULT 0,
	wins7				    LONG DEFAULT 0,
	wins8				    LONG DEFAULT 0,
	wins9				    LONG DEFAULT 0,
  insert_date 		DATE DEFAULT GETUTCDATE(),
	modified_date		DATE DEFAULT NULL,
	reset_date			DATE DEFAULT NULL,					-- Date the statistics was reset to zero
  PRIMARY KEY (user_id)
);
